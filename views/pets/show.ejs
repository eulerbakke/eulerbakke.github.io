<% layout('layouts/boilerplate') %>

    <div class="row">
        <div class="col-6">
            <div class="card mb-3">
                <img src="<%= pet.photos %>" class="card-img-top" alt="...">
                <div class="card-body">
                    <h5 class="card-title">
                        <%= pet.name %>
                    </h5>
                    <p class="card-text">
                        <%= pet.description %>
                    </p>
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item text-muted">
                        <%= pet.location %>
                    </li>
                    <!-- <li class="list-group-item">A second item</li> -->
                    <!-- <li class="list-group-item">A third item</li> -->
                </ul>
                <div class="card-body">
                    <a class="card-link btn btn-info" href="/pets/<%= pet._id %>/edit">Editar</a>
                    <form class="d-inline" action="/pets/<%= pet._id %>?_method=DELETE" method="POST">
                        <button class="btn btn-danger">Remover pet</button>
                    </form>
                </div>
                <div class="card-footer text-muted">
                    <a href="/pets">Todos os pets</a>
                </div>
            </div>

        </div>
        <div class="col-6">
            <h2>Deixe seu comentário sobre <%= pet.name %>
            </h2>
            <form action="/pets/<%= pet._id %>/reviews" method="POST" class="mb-3 validated-form" novalidate>
                <div class="mb-3">
                    <label class="form-label" for="body">Comentário</label>
                    <textarea class="form-control" name="review[body]" id="body" cols="30" rows="3" required></textarea>
                    <div class="invalid-feedback">
                        Digite um comentário.
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="intent">Intenção de adoção</label>
                    <input class="form-range" type="range" min="1" max="5" name="review[adoptionIntent]" id="intent">
                </div>
                <button class="btn btn-success">Enviar comentário</button>
            </form>
            <% for(let review of pet.reviews) {%>
                <div class="card mb-3">
                    <div class="card-body">
                        <h5 class="card-title">
                            Intenção de adoção: <%= review.adoptionIntent %>/5
                        </h5>
                        <p class="card-text">
                            Comentário: <%= review.body %>
                        </p>
                        <form action="/pets/<%= pet._id %>/reviews/<%= review._id  %>?_method=DELETE" method="POST">
                            <button class="btn btn-sm btn-danger">Apagar comentário</button>
                        </form>
                    </div>
                </div>
                <% } %>
        </div>
    </div>

    <footer>

    </footer>